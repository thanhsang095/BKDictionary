<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.developer.sangbarca.bkdictionary">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.developer.sangbarca.bkdictionary.Rest.BKApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.developer.sangbarca.bkdictionary.Activities.LoginActivity" />
        <activity android:name="com.developer.sangbarca.bkdictionary.EnglishVietNamActivity" />
        <activity
            android:name="com.developer.sangbarca.bkdictionary.Activities.DictionaryActivity"
            android:parentActivityName="com.developer.sangbarca.bkdictionary.MainActivity" />
        <activity android:name="com.developer.sangbarca.bkdictionary.Activities.StartupActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.developer.sangbarca.bkdictionary.Activities.RegisterActivity" />
        <activity android:name="com.developer.sangbarca.bkdictionary.Activities.QuickSearchActivity" />
        <activity
            android:name="com.developer.sangbarca.bkdictionary.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name="com.developer.sangbarca.bkdictionary.Activities.HistoryActivity"></activity>
    </application>

</manifest>