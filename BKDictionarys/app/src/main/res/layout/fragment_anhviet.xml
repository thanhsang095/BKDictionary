<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/shape">

    <ImageView
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/stars"
        android:layout_width="30dp"
        android:layout_height="30dp" />
    <TextView
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="about"
        android:id="@+id/textViewWordName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:layout_toRightOf="@id/textViewWordName"
        android:text="/ә'baut/"
        android:id="@+id/textViewWordPronounce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:layout_below="@id/textViewWordName"
        android:text="Chủ đề"
        android:id="@+id/textViewWordCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_marginTop="20dp"
        android:id="@+id/imageViewBullet1"
        android:layout_below="@id/textViewWordCategory"
        android:layout_toRightOf="@id/textViewWordCategory"
        android:src="@drawable/arrow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="20sp"
        android:textColor="#D146FF"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/textViewWordCategory"
        android:layout_toRightOf="@id/imageViewBullet1"
        android:text="Từ vựng Toeic"
        android:id="@+id/textViewWordcategoryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:layout_below="@id/imageViewBullet1"
        android:text="Trạng từ"
        android:id="@+id/textViewWordTuLoai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_marginTop="20dp"
        android:id="@+id/imageViewBullet2"
        android:layout_below="@id/textViewWordTuLoai"
        android:layout_toRightOf="@id/textViewWordCategory"
        android:src="@drawable/arrow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:layout_below="@id/imageViewBullet2"
        android:text="Example"
        android:id="@+id/textViewWordExample"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_marginTop="20dp"
        android:id="@+id/imageViewBullet3"
        android:layout_below="@id/textViewWordExample"
        android:layout_toRightOf="@id/textViewWordCategory"
        android:src="@drawable/arrow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="20sp"
        android:textColor="#D146FF"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/textViewWordExample"
        android:layout_toRightOf="@id/imageViewBullet3"
        android:text="about"
        android:id="@+id/textViewWordExampleContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="20sp"
        android:textColor="#D146FF"
        android:layout_marginLeft="10dp"
        android:text="khoảng, về"
        android:id="@+id/textViewWordMean"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageViewBullet2"
        android:layout_toRightOf="@+id/textViewWordExample"
        android:layout_toEndOf="@+id/textViewWordExample" />


</RelativeLayout>